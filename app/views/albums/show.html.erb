<h2> Album Details </h2>
<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>
 
<p>
  <strong>Artist:</strong>
  <%= @album.artist %>
</p>

<% if @album.songs.length !=0 %>

<table>
  <tr>
    <th>Title</th>
    <th>Duration</th>
  </tr>
 
  <% @album.songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.duration %></td>
      <td><%= link_to 'Edit', edit_album_song_path(@album, song) %></td>
      <td><%= link_to 'Delete', album_song_path(@album, song),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<% end %>
<br>
<%= link_to 'Edit Album', edit_album_path(@album) %> | <%= link_to 'Create New Album', new_album_path %> | <%= link_to 'List All Albums', albums_path %> 